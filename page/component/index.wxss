@import '../common/common.wxss';
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #c0a97a;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-bottom{
    border-raius:10rpx;
    margin-top:10rpx;
    overflow:hidden;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.select-bottom navigator image{
    border-radius:10rpx;
}
.newest-box{
    padding:0 10rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 355rpx;
    height: 355rpx;
    margin:0 20rpx 20rpx 0;
    text-align: center;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 355rpx;
    height: 355rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}
.newest-text{
    overflow:hidden;
    text-overflow:ellipsis; 
    white-space:nowrap; 
}
.price{
    font-size: 18rpx;
    color:#c0a97a;
}